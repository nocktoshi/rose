{
  "name": "@nockbox/iris-sdk",
  "version": "0.1.0",
  "description": "TypeScript SDK for interacting with Iris wallet extension",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./wasm": {
      "types": "./dist/wasm.d.ts",
      "import": "./dist/wasm.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "build-example": "npm run build && tsc --project examples/tsconfig.json && vite build --config vite.config.examples.ts",
    "dev": "tsc --watch",
    "dev-example": "vite --config vite.config.examples.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "nockchain",
    "wallet",
    "web3",
    "blockchain",
    "schnorr"
  ],
  "author": "Nockbox Inc",
  "license": "MIT",
  "devDependencies": {
    "typescript": "^5.5.3",
    "vite": "^5.0.0",
    "prettier": "^3.4.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nockbox/wallet-frontend.git",
    "directory": "sdk"
  },
  "dependencies": {
    "@scure/base": "^2.0.0",
    "@nockbox/iris-wasm": "^0.1.0"
  }
}
